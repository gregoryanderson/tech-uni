<%= render 'shared/errors', obj: @student %>
<div class="container">
  <div class="row center-align sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h4 class="header"><%=@student.new_record? ? "Sign Up" : "Update"%></h1>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                  <%= f.email_field :email, placeholder: "Enter your email address", autofocus: true %>
                  <%= f.label :email, class: "active" %>
                </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                  <%= f.password_field :password, placeholder: "Choose a password", autofocus: true %>
                  <%= f.label :password, class: "active" %>
                </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                  <%= f.password_field :password_confirmation, placeholder: "Please confirm your password", autofocus: true %>
                  <%= f.label :password_confirmation, class: "active" %>
                </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.button(@student.new_record? ? '<i class="material-icons right">create</i>Sign Up'.html_safe : '<i class="material-icons right">create</i>Update your profile'.html_safe, class: "btn teal waves-effect waves-light right") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>