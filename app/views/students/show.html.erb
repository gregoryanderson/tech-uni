<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card teal darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <p>Course Enrollments:
          <% if @student.courses.empty? %>
            None
          <% else %>
            <ul class="profile_ul">
              <% @student.courses.each do |course| %>
                  <li><%= course.name%>    |      <%=link_to "Unenroll", course_unenroll_path(course_id: course.id), method: :delete, class: "rails-links" %></li>
                <%end%>
            </ul>
          <% end %>
        </p>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>