
<div class="row">
  <div class="col s12">
    <h1 class="center-align">Student Directory</h1>
  </div>
</div>
<div class="row">
  <% @students.each do |student| %>
    <div class="col m12">
      <div class="card teal darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= student.name %></span>
          <p>Email: <%= student.email %></p>
          <p>Course Enrollments:</p>
          <% if student.courses.empty? %>
            <div class="container">
              <p>None</p>
            </div>
          <% else %>
            <div class="container">
              <ul>
                <% student.courses.each do |course| %>
                    <li><%= course.name%></li>
                  <%end%>
              </ul>
            </div>
          <% end %>
        </div>
        <div class="card-action">
          <%= link_to "View Profile", student_path(student) %>
        </div>
      </div>
    </div>
  <% end %>
</div>


